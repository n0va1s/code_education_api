{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div>
                    {% if cliente %}
                    <form action="{{ app.url_generator.generate('gravarCliente', {id: cliente.id}) }}" method="post">
                    {% else %}
                    <form action="{{ app.url_generator.generate('gravarCliente') }}" method="post">
                    {% endif %}
                        <fieldset>
                            <legend>Informe:</legend>
                                <label for="nome">Nome:</label><br />
                                <input type="text" id="nome" type="text" name="nomCliente" value ="{% if cliente %}{{ cliente.nome }}{% endif %}"><br />
                                <label for="email">Email:</label><br />
                                <input type="text" id="email" type="email" name="emlCliente" value ="{% if cliente %}{{ cliente.email }}{% endif %}"> <br />
                        </fieldset>
                        <br />
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Limpar">
                    </form>
                </div>
                <hr>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="{{ app.url_generator.generate('listarClienteHtml') }}">Todos os posts</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}